          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
            integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
    <style>
        #back {
            position: absolute;
            bottom: 8px;
            right: 16px;
            font-size: 18px;
            float: right;
        }
    </style>
</head>
<body>
    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close">
                <span class="icofont-close js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>
    <nav class="site-nav mt-3">
        <div class="container">
            <div class="site-navigation">
                <a href="#" class="logo m-0 float-start">Courier Management System</a>
                <ul class="js-clone-nav d-none d-lg-inline-block text-left site-menu float-end">
                    <li class="active"><a href="#">Home</a></li>
                    <li class="active"><a asp-action="Logout">Logout</a></li>
                </ul>
                <a href="#" class="burger ml-auto float-right site-menu-toggle js-menu-toggle d-inline-block d-lg-none light">
                    <span></span>
                </a>
            </div>


        </div>
    </nav>
    <div class="hero">
        <div class="map">
            <img src="https://preview.colorlib.com/theme/foundation2/images/world-dotted-map.png" alt="Image" class="img-fluid">
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <h1 class="heading" data-aos="fade-up">Welcome Admin</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="section section-1">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6" data-aos="fade-up" data-aos-delay="0">
                    <div class="feature box-shadow d-flex justify-content-center">

                        <div class="text">
                            <h3 class="text-center" data-aos="fade-up"><strong> User</strong></h3>
                            <a asp-action="CustomerList">
                                <img src="https://images.unsplash.com/photo-1556155092-490a1ba16284?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" width="425" height="400">
                            </a>
                            <hr>
                            <p><a asp-action="CustomerList" class="more active dark">Click Here to Create User<span class="icon-arrow_forward"></span></a></p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-md-6 col-lg-6" data-aos="fade-up" data-aos-delay="0">
                    <div class="feature box-shadow d-flex justify-content-center">

                        <div class="text">
                            <h3 class="text-center" data-aos="fade-up"><strong> Delivery Agent</strong></h3>
                            <a asp-action="AgentList">
                                <img src="https://t3.ftcdn.net/jpg/02/62/29/32/360_F_262293274_BgGtnhf3gAZJkEt5vMj88oUK5Pwjguji.jpg" width="425" height="400">
                            </a>
                            <hr>
                            <p><a asp-action="AgentList" class="more active dark">Click Here to Create Delivery Agent<span class="icon-arrow_forward"></span></a></p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="0">

                </div>

                <div class="col-sm-6 col-md-6 col-lg-6" data-aos="fade-up" data-aos-delay="0">
                    <div class="feature box-shadow d-flex justify-content-center">

                        <div class="text">
                            <h3 class="text-center" data-aos="fade-up"><strong> Search Consignemnt</strong></h3>
                            <a asp-action="ConsignmentList">
                                <img src="https://img.freepik.com/free-photo/crop-courier-searching-parcel-list_23-2147787831.jpg?size=626&ext=jpg" width="425" height="400">
                            </a>
                            <hr>
                            <p><a asp-action="ConsignmentList" class="more active dark">Click Here to search Consignment<span class="icon-arrow_forward"></span></a></p>
                        </div>
                    </div>
                </div>








            </div>
        </div>
    </div>



    <div class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="widget">

                        <h3>Connect</h3>
                        <!-- Grid container -->
                        <div class="container">
                            <!-- Section: Social media -->
                            <section class="mb-4">

                                <!-- Twitter -->
                                <a class="btn btn-light btn-floating m-1" style="background-color: #55acee;" href="https://twitter.com/LOGIN" role="button">
                                    <i class="fab fa-twitter"></i>
                                </a>

                                <!-- Google -->
                                <a class="btn btn-light btn-floating m-1" style="background-color: #dd4b39;" href="https://accounts.google.com/signin/v2/identifier?flowName=GlifWebSignIn&flowEntry=ServiceLogin" role="button">
                                    <i class="fab fa-google"></i>
                                </a>


                                <!-- Linkedin -->
                                <a class="btn btn-light btn-floating m-1" style="background-color: #0082ca;" href="https://www.linkedin.com/login" role="button">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>

                            </section>
                            <!-- Section: Social media -->
                        </div>
                        <!-- Grid container -->


                    </div>
                </div>

            </div>
        </div>

    </div>



    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>


